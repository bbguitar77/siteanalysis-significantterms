{
  "template" : "*",
  "settings" : {
    "index": {
      "number_of_shards" : 1,
      "number_of_replicas" : 0,
      "analysis":{
        "analyzer":{
          "custom_text":{
            "type":"custom",
            "char_filter":["html_strip"],
            "tokenizer":"standard",
            "filter":["lowercase", "stop", "asciifolding"]
          }
        }
      }
    }
  },
  "mappings" : {
    "site" : {
      "properties" : {
        "uri" : {"type" : "string", "index" : "not_analyzed"},
        "content" : {"type" : "string", "analyzer": "custom_text"}
      }
    }
  }
}